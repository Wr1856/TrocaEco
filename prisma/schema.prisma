// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(uuid())
  name        String
  phoneNumber String
  address     String
  email       String @unique
  password    String

  userProducts UserProduct[]
  UserBenefits UserBenefits[]
  points       Points?

  @@map("users")
}

model Product {
  id     String @id @default(uuid())
  name   String
  points Int

  userProducts UserProduct[]

  @@map("products")
}

model UserProduct {
  product Product @relation(fields: [productId], references: [id])
  owner   User    @relation(fields: [ownerId], references: [id])

  ownerId   String
  productId String

  @@id([ownerId])
  @@map("users_products")
}

model Benefit {
  id           String         @id @default(uuid())
  name         String
  points       Int
  UserBenefits UserBenefits[]

  @@map("benefits")
}

model UserBenefits {
  benefit Benefit @relation(fields: [benefitId], references: [id])
  owner   User    @relation(fields: [ownerId], references: [id])

  benefitId String
  ownerId   String

  @@id([ownerId])
}

model Points {
  id      String  @id @default(uuid())
  owner   User?   @relation(fields: [ownerId], references: [id])
  ownerId String? @unique
  amount  Int
}
